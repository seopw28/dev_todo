rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // To Do 컬렉션 규칙
    match /todos/{todoId} {
      // 개발용: 인증 없이 모든 작업 허용 (개발 중에만 사용)
      allow read, write: if true;
      
      // 프로덕션용: 아래 주석을 해제하고 위의 allow read, write를 주석 처리
      // 읽기: 모든 사용자 허용 (또는 인증된 사용자만)
      // allow read: if true; // 모든 사용자가 읽기 가능
      // allow read: if request.auth != null; // 인증된 사용자만 읽기 가능
      
      // 쓰기: 생성, 수정, 삭제 (인증 필요)
      // allow create: if request.auth != null 
      //               && request.resource.data.keys().hasAll(['text', 'completed', 'createdAt'])
      //               && request.resource.data.text is string
      //               && request.resource.data.text.size() > 0
      //               && request.resource.data.text.size() <= 500
      //               && request.resource.data.completed is bool
      //               && request.resource.data.createdAt is string;
      
      // allow update: if request.auth != null
      //               && request.resource.data.keys().hasAll(['text', 'completed', 'createdAt'])
      //               && request.resource.data.text is string
      //               && request.resource.data.text.size() > 0
      //               && request.resource.data.text.size() <= 500
      //               && request.resource.data.completed is bool;
      
      // allow delete: if request.auth != null;
    }
    
    // 사용자별 To Do 컬렉션 (사용자 ID별로 분리)
    match /users/{userId}/todos/{todoId} {
      // 자신의 데이터만 읽기/쓰기 가능
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 날씨 검색 기록 (선택사항)
    match /weather_searches/{searchId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}

